<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">

        <com.example.haoji.phoneticsymbol.home.widget.BorderGridView
            android:listSelector="@android:color/transparent"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:id="@+id/id_gv"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:numColumns="2"
            android:background="@android:color/white"
            app:borderFlag="left|top|right|bottom"
            app:horizontalBorderWidth="1px"
            app:verticalBorderWidth="1px"
            app:horizontalBorderColor="@android:color/black"
            app:verticalBorderColor="@android:color/black" />


        <com.example.haoji.phoneticsymbol.home.widget.BorderGridView
            android:listSelector="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:id="@+id/id_gv2"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:numColumns="2"
            android:background="@android:color/white"
            app:borderFlag="left|top|right|bottom"
            app:horizontalBorderWidth="1px"
            app:verticalBorderWidth="1px"
            app:horizontalBorderColor="@android:color/black"
            app:verticalBorderColor="@android:color/black">
        </com.example.haoji.phoneticsymbol.home.widget.BorderGridView>

    </LinearLayout>



</LinearLayout>